<div class="container">
	<%= form_with scope: :comment, url: fishtagram_comments_path, local: true do |form| %>

		<h1>
			Post a comment!
		</h1>
		<%= form.hidden_field :bubble_id, :value => @bubble_id %>
		<div>
			<%= form.label :body %><br>
	    <%= form.text_area :body, :style => "height: 12rem" %>
		</div>

	  <div>
	    <%= form.submit :id => "submit_button", :class => "example_d2" %>
	  </div>
	<% end %>
	<%= link_to 'Back', fishtagrams_path, :class => "example_d2" %>
</div>