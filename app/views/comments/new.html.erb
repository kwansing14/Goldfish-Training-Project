<div class="container" style="margin-top:30px; margin-bottom: 30px" >
	<div class="card">
    <div class="card-content">
    	<div class='imgcardshow center'>
    		<%= image_tag @fishtagram.img_url, :style=>"max-width:400px"%>
    	</div>
      <span class="card-title"><%= @fishtagram.title %></span>
    </div>
    <div class="card-action">
    	<% @comments.each do |comment| %>
    		<div class="row" style="padding:10px; margin-bottom: 15px">
		      <div class="col" style="2px solid black"><span><%= comment.body %></span></div>
				</div>
			<% end %>
    	<%= form_with scope: :comment, url: fishtagram_comments_path, local: true do |form| %>
    	<div class='row' style="padding:10px">
    		<%= form.text_area :body , :placeholder=>'new comment...'%>
    		<%= form.submit :class=>'btn'%>
  		</div>
			<% end %>
			<div class='divider'>
			</div>
			<%= link_to 'Home page', root_path %>
		</div>
	</div>
</div>